{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "declaration":  true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "sourceMap": false,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": ["src/components"],
  "exclude": ["src/components/**/*.test.ts", "src/components/**/*.stories.ts"],
}
